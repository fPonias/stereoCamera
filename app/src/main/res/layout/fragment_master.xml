<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.munger.stereocamera.widget.SquareLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/previewContainer">

        <com.munger.stereocamera.widget.PreviewWidget
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/preview"
            />
        <com.munger.stereocamera.widget.SlavePreviewOverlayWidget
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/slavePreview"/>
        <com.munger.stereocamera.widget.PreviewOverlayWidget
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:type="crosshairs"
            android:id="@+id/previewOverlay"
            app:color="@color/white"/>
    </com.munger.stereocamera.widget.SquareLayout>
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/previewContainer"
        android:layout_marginTop="-60dp"
        android:src="@drawable/shutter_icon"
        android:id="@+id/shutter"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/white"
        android:layout_below="@+id/previewContainer"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/previewContainer"
        android:paddingTop="10dp"
        android:id="@+id/controls"
    >
        <com.munger.stereocamera.widget.ZoomWidget
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/vert_level_layout"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:id="@+id/zoom_slider"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toStartOf="@+id/horiz_level_layout"
            android:id="@+id/vert_level_layout"
            android:layout_marginEnd="10dp">
            <com.munger.stereocamera.widget.OrientationWidget
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/vert_level"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tilt_sensor_label"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/horiz_level_layout"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_horizontal">
            <com.munger.stereocamera.widget.OrientationWidget
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/horiz_level"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/level_sensor_label"
                android:textAlignment="center"/>
        </LinearLayout>
    </RelativeLayout>

    <com.munger.stereocamera.widget.ThumbnailWidget
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:id="@+id/thumbnail"/>
</RelativeLayout>